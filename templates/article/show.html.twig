{% extends 'basejdida.html.twig' %}


{% block title %}Forum{% endblock %}
{% block test %}
    <li><a href="{{ path("etablissement_edit",{'id':id }) }}">Modifier Votre compte</a> </li>
    <li><a href="{{ path("cours_index",{'id_Etab':id}) }}">Mes cours</a> </li>
    <li><a href="{{ path("article_profile",{'id':id}) }}">Mon Forum</a></li>
    <li><a href="{{ path("article",{'id':id}) }}">Forum</a></li>
    <li><a href="{{ path("speciality_index",{'id':id}) }}">Mes Specialit√©es</a></li>

{% endblock %}

{% block body %}

        <article >
            <h2 style="margin-left: 400px">{{article.title | raw}}</h2>
            <h3 style="margin-left: 400px">{{ article.getEtablissement().Nom }}</h3>
            <div style="margin-left: 400px" class="metadata">{{ article.createdAt | format_datetime() }}</div>
            <div class="content">
                <img style="margin-left: 400px" src="{{asset('/uploads/'~ article.image )  }}" alt="">
                <p>{{ article.content | raw }}</p>
            </div>
        </article>
    <section id="commetaires">
        {% for comment in article.commentaires %}
        <div class="comment">
            <div class="row">
                <div class="col-3">
                    {{ comment.author.Nom }} (<small>{{ comment.createdAt | format_datetime() }}</small>)
                </div>
                <div class="col">
                    {{ comment.content | raw }}
                </div>
            </div>
        </div>

    </section>
    {% endfor %}

    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}

{% endblock %}