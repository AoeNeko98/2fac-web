{% extends 'base-houssem.html.twig' %}

{% block title %} Profile {% endblock %}

{% block body %}
    {% for article in articles %}
        {% if article.Etablissement.id == id %}
        <article style="margin-left: 400px">
            <h2>{{article.title | raw}}</h2>
            <h3>{{ article.getEtablissement().Nom }}</h3>
            <div class="metadata">{{ article.createdAt | format_datetime() }}</div>
            <div class="content">
                <img src="{{asset('/uploads/'~ article.image )  }}" alt="">
                <p>{{ article.content | u.truncate(100) }}</p>
            </div>

            <a href="{{ path('article_show', {'id': article.id})  }}" class="btn btn-info">Lire la suite</a>
            <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-info">Editer</a>
                    {{ include('article/delete.html.twig') }}
        </article>
        {% endif %}
    {% endfor%}
{% endblock %}
