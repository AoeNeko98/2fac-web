{% extends 'basejdida.html.twig' %}


{% block title %} Profile {% endblock %}
{% block test %}
    <li><a href="{{ path("etablissement_edit",{'id':id }) }}">Modifier Votre compte</a> </li>
    <li><a href="{{ path("cours_index",{'id_Etab':id}) }}">Mes cours</a> </li>
    <li><a href="{{ path("article_profile",{'id':id}) }}">Mon Forum</a></li>
    <li><a href="{{ path("article",{'id':id}) }}">Forum</a></li>
    <li><a href="{{ path("speciality_index",{'id':id}) }}">Mes Specialit√©es</a></li>

{% endblock %}

{% block body %}
    {% for article in articles %}
        {% if article.Etablissement.id == id %}
        <article style="margin-left: 400px">
            <h2>{{article.title | raw}}</h2>
            <h3>{{ article.getEtablissement().Nom }}</h3>
            <div class="metadata">{{ article.createdAt | format_datetime() }}</div>

            <div class="content">
                <img src="{{asset('/uploads/'~ article.image )  }}" alt="">
                <section>
                <p>{{ article.content | u.truncate(100) | raw }}</p>
                </section>
            </div>

            <a href="{{ path('article_show', {'id': article.id,'idetab':id})  }}" class="btn btn-info">Lire la suite</a>
            <a href="{{ path('article_edit', {'id': article.id,'idetab':id}) }}" class="btn btn-info">Editer</a>
                    {{ include('article/delete.html.twig', {'idetab':id}) }}
        </article>
        {% endif %}
    {% endfor%}
    <a href="{{ path('article_createss', {'id':id})  }}" class="btn btn-info">Create New</a>
{% endblock %}
