{% extends 'base-houssem.html.twig' %}

{% block title %}Eleve index{% endblock %}

{% block body %}
    <h1>Eleve index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Score</th>
                <th>Bac_Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for eleve in eleves %}
            <tr>
                <td>{{ eleve.id }}</td>
                <td>{{ eleve.score }}</td>
                <td>{{ eleve.BacType }}</td>
                <td>
                    <a href="{{ path('eleve_show', {'id': eleve.id}) }}">show</a>
                    <a href="{{ path('eleve_edit', {'id': eleve.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('eleve_new',{'id': 1 })}}">Create new</a>
{% endblock %}
