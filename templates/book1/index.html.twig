<script>
    var ty=[];
    var nty=0;
    function checkTypes(val,idi){

        if ($(idi).is(':checked')){
            if(jQuery.inArray(val,ty)==-1) {
                ty.push(val);
                nty+=1;
            }
        }else {
            if (jQuery.inArray(val, ty) !== -1) {
                ty.splice(ty.indexOf(val), 1);
                nty -= 1;
            }
        }
        console.log(ty)
    }
</script>
