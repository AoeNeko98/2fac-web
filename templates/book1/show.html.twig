{% extends 'base.html.twig' %}

{% block title %}Book Details{% endblock %}

{% block body %}

    <div class="rs-skillbar style1 pt-92 pb-100 md-pt-72 md-pb-80 sm-pt-80">
            <div class="container">
                <div class="gray-bg">
                    <div class="row">
                        <div class="col-lg-6 content-part">
                            <div class="sec-title mb-35 md-mb-30">
                                <h2 class="title mb-0">Book details</h2>
                            </div>

                            <div class="cl-skill-bar">
                                <!-- Start Skill Bar -->
                                <span class="skillbar-title">Nom</span>
                                <div class="sub-title primary">{{ book1.nom }}</div>

                                <!-- Start Skill Bar -->
                                <span class="skillbar-title">Cat√©gorie</span>
                                <div class="sub-title primary">{{ book1.categorie.nom }}</div>

                                <!-- Start Skill Bar -->
                                <span class="skillbar-title">Utilisateur</span>
                                <div class="sub-title primary">{{ book1.user.nom }}</div>

                                <span class="skillbar-title">Prix</span>
                                <div class="sub-title primary">{{ book1.prix }} DT</div>

                                <span class="skillbar-title">ISBN</span>
                                <div class="sub-title primary">{{ book1.isbn }}</div>
                                <span class="skillbar-title">Type</span>
                                <div class="sub-title primary">{{ book1.type }}</div>
                                <span class="skillbar-title">Description</span>
                                <div class="sub-title primary">{{ book1.description}}</div>
                                <div class="btn-group mt-60">
                                    <a class="readon" href="{{ path('book1_index') }}" >Back to list</a>
                                    <a class="readon" style="margin-left: 10px" href="{{ path('book1_mybib') }}" >Back to my list</a>

                                </div>



                            </div>
                        </div>
                        <div class="col-lg-6 pl-0 md-order-first md-pl-pr-15">
                            <div class=" md-pt-200 md-pb-200" >
                                <img src="{{ asset('/assets/images/' ~book1.image) }}" style="width:100%;height: 100%;">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Skillbar Section End -->



{% endblock %}
